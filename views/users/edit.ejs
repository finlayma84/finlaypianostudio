<% include ../partials/header %>



<h1 class="ui huge header center aligned">Edit Profile</h1>
<div id="authcontainer" class="container">
    <a href="">Click here</a> to change your password
    <br>
    <br>
    <form action="/profiles/<%=currentUser.id%>?_method=PUT" method="POST" class="ui form">


        <div class="field ten wide ">
            <label for="firstname">First Name: </label>
            <input type="text" name="firstname" value="<%=currentUser.firstname%>">
        </div>
        
        <div class="field ten wide ">
            <label for="lastname">Last Name: </label>
            <input type="text" name="lastname" value="<%=currentUser.lastname%>">
        </div>
        <div class="field ten wide ">
            <label for="avatar">Avatar </label>
            <input type="url" name="avatar" value="<%=currentUser.avatar%>">
        </div>
        <div class="field ten wide"><label for="email">Email Address: </label>
            <input type="email" name="email" value="<%=currentUser.email%>">
        </div>

        <button class="ui large button register"type="submit" >Submit Changes </button>    
       

    </form>

</div>  



<% include ../partials/footer %>